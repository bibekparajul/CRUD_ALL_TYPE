@using CrudAll.Models
@model CategoryModel

<h2>Create Category By Repo</h2>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="CategoryName"></label>
                    <input asp-for="CategoryName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary" style="width:120px">Create</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
                    Back to the List
                </a>
            </form>
        </div>
    </div>
</div>
